# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Supabase Configuration (You will provide these)
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-bytes-long
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Email Configuration (SendGrid, AWS SES, or similar)
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@ai-nft-platform.com
SENDGRID_API_KEY=your-sendgrid-api-key
# OR for other services
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Redis Configuration (for rate limiting, caching, token blacklist)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME_MINUTES=15
OTP_EXPIRATION_MINUTES=10
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_IDLE_TIMEOUT=30000

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_ACTIVITY_LOGGING=true
ENABLE_TOKEN_BLACKLIST=true
